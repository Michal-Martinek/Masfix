
%include "core/memory"
%include "core/heap"
%include "core/structs"
%include "std/math"
%include "core/procedures"

%namespace pair {
	%struct:begin()
	%struct:field(first, 1)
	%struct:field(second, 1)

	; swaps pair elements
	%macro swapPair() {
		%do_at(first, ldm)
		%do_at(second, swap)
		%do_at(first, strr)
	}
	; calculates first<op>second
	%macro reduce(op) {
		%do_at(first, ldm)
		%do_at(second,
			ld(%op)m
		)
	}
	%func{pair_compare_eq, 2, 1,
		%seg:arg(0,
			movm
			ldm
		)
		%seg:arg(1,
			movm
			leqm
		)
		%seg:local(0, strr)
		%seg:arg(0,
			movma %second
			ldm
		)
		%seg:arg(1,
			movma %second
			leqm
		)
		%seg:local(0, ld&m)
	}

	%struct:end()
}
